<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # RewriteBase para subdirectorio - OPCIÓN 1: Con RewriteBase
    # Descomentar y ajustar según la ruta real del proyecto
    # RewriteBase /ModuStackAdmin/ModuStackbase/

    # OPCIÓN 2: Sin RewriteBase (si RewriteBase causa problemas)
    # Usar esta configuración si la opción 1 no funciona

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller (public/index.php)...
    # Si RewriteBase no funciona, probar sin él
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ public/index.php [L]
</IfModule>