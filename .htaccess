<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Permitir acceso directo a archivos est√°ticos
    # Redirigir /ModuStackAdmin/css/ y /ModuStackAdmin/js/ a public/
    RewriteCond %{REQUEST_URI} ^/ModuStackAdmin/(css|js|images|build|storage)/(.*)$
    RewriteRule ^ModuStackAdmin/(.*)$ public/$1 [L]
    
    # Redirigir rutas API y web a public/index.php
    RewriteCond %{REQUEST_URI} ^/ModuStackAdmin/(api|.*)$
    RewriteRule ^ModuStackAdmin/(.*)$ public/$1 [L]
</IfModule>
