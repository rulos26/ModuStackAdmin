<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Si el request es directamente a un archivo en public/, permitirlo
    RewriteCond %{REQUEST_URI} ^/public/
    RewriteRule ^(.*)$ - [L]
    
    # Si es un archivo existente (js, css, etc.), permitirlo
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^(.*)$ - [L]
    
    # Si es un directorio existente, permitirlo
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^(.*)$ - [L]
    
    # Redirigir todo lo dem√°s a public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
