<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Permitir acceso directo a archivos estáticos
    # Redirigir /ModuStackAdmin/css/ y /ModuStackAdmin/js/ a public/
    RewriteCond %{REQUEST_URI} ^/ModuStackAdmin/(css|js|images|build|storage)/(.*)$
    RewriteRule ^ModuStackAdmin/(.*)$ public/$1 [L]
    
    # Redirigir todo lo demás de /ModuStackAdmin/ a public/
    RewriteCond %{REQUEST_URI} ^/ModuStackAdmin/(.*)$
    RewriteRule ^ModuStackAdmin/(.*)$ public/$1 [L]
</IfModule>
